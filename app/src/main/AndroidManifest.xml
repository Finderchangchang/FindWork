<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wai.findwork">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_font"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.RegActivity" />
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.RegPersonActivity" />
        <activity
            android:name=".ui.StartActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.PersonDetailActivity" />
        <activity android:name=".ui.RiLiActivity" />
        <activity android:name=".ui.NewDetailActivity" />
        <activity android:name=".ui.AddRiLiActivity" />
        <activity android:name=".ui.EditUserActivity" />
        <activity android:name="me.iwf.photopicker.PhotoPickerActivity" />

        <activity android:name="me.iwf.photopicker.PhotoPagerActivity" />
        <activity android:name=".ui.WebActivity"/>
    </application>
</manifest>